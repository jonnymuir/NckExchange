<?xml version="1.0" encoding="utf-8"?>
<language alias="en" fallbackculture="en-US">
  <area alias="user">
    <!-- Override the subject of the backoffice user invitation email -->
    <key alias="inviteEmailCopySubject">Welcome to The Exchange Tod. Your Account is Ready.</key>
    <!-- Override the body format of the backoffice user invitation email -->
    <key alias="inviteEmailCopyFormat">
      <![CDATA[
      <!DOCTYPE html>
      <html>
      <head>
          <style>
              body { font-family: Arial, sans-serif; line-height: 1.6; color: #333; }
              .container { max-width: 600px; margin: 20px auto; padding: 20px; border: 1px solid #ddd; border-radius: 8px; }
              .header { background-color: #007bff; color: white; padding: 10px 20px; text-align: center; border-radius: 8px 8px 0 0; }
              .content { padding: 20px; }
              .button { display: inline-block; background-color: #28a745; color: white; padding: 10px 20px; text-decoration: none; border-radius: 5px; margin-top: 15px; }
          </style>
      </head>
      <body>
          <div class="container">
              <div class="header">
                  <h2>Welcome to The Exchange Tod</h2>
              </div>
              <div class="content">
                  <p>%2%</p>
                  <p>To access your account, sign in using your Google account associated with this email address</p>
                  <p style="text-align: center;">
                      <a href="https://theexchange-tod.com/umbraco" class="button" target="_blank" rel="noopener noreferrer">Sign In with Google</a>
                  </p>
              </div>
          </div>
      </body>
      </html>
      ]]>
    </key>
  </area>
</language>
