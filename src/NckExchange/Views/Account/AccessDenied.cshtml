@using System.Net
@{
    ViewData["MetaTitle"] = "Access Denied";
    Layout = "_Layout";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
            <h1 class="display-4 text-danger mb-3"><i class="bi bi-x-octagon-fill me-2" aria-hidden="true"></i> Access Denied</h1>
            <p class="lead mb-4">You do not have permission to view this resource.</p>
            <p class="mb-5">
                If you believe this is an error, please ensure you are logged in with an account that has the necessary permissions.
            </p>
            <a href="/" class="btn btn-primary btn-lg me-3" aria-label="Go to Home Page">
                <i class="bi bi-house-fill me-2" aria-hidden="true"></i> Go to Home
            </a>
            <a href="/Account/Login@(string.IsNullOrWhiteSpace(ViewData["ReturnUrl"] as string) ? "" : $"?ReturnUrl={WebUtility.UrlEncode(ViewData["ReturnUrl"] as string)}")" class="btn btn-secondary btn-lg" aria-label="Go to Login Page">
                <i class="bi bi-box-arrow-in-right me-2" aria-hidden="true"></i> Login Again
            </a>
        </div>
    </div>
</div>
