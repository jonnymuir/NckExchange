@model NckExchange.Models.AdminReplyViewModel
@{
    ViewData["MetaTitle"] = "Reply to Message";
    Layout = "_Layout"; 
}

<style>
    :root {
        --bs-body-font-size: 1rem;
        --bs-body-line-height: 1;
    }
</style>

@await Html.PartialAsync("mainNavigationAdmin")

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="px-4 pb-4 bg-white rounded-3 shadow">
                <h1 class="masthead mb-2 text-center">Reply to Message</h1>

                <form asp-controller="Admin" asp-action="Reply" method="post">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="OriginalSenderEmail" />

                    <div class="mb-3">
                        <label asp-for="OriginalSenderName" class="form-label fw-bold">From:</label>
                        <input type="text" asp-for="OriginalSenderName" class="form-control" readonly />
                    </div>

                    <div class="mb-3">
                        <label for="OriginalMessage" class="form-label fw-bold">Original Message:</label>
                        <textarea asp-for="OriginalMessage" class="form-control" rows="5" readonly></textarea>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Answer" class="form-label fw-bold">Your Reply:</label>
                        <textarea asp-for="Answer" class="form-control" rows="10" placeholder="Type your answer here..." required></textarea>
                        <span asp-validation-for="Answer" class="text-danger small mt-1"></span>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="submit" class="btn btn-primary"><i class="bi bi-send-fill"></i> Send Reply</button>
                        <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary"><i class="bi bi-x-circle-fill"></i> Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
